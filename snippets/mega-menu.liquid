{% liquid 
    assign mega_menu = section.settings.mega_menu
    assign mega_menu_links = linklists[mega_menu].links
%}
{%- if mega_menu_links.size > 0-%}
{{ 'component-mega-menu.css' | asset_url | stylesheet_tag }}

<nav class="mega-menu js-mega-menu" id="menuNav">
    <ul class="mega-menu__list">
        {%- for link in mega_menu_links -%}
        <li class="mega-menu__item {% if link.url == '#shop-our-brands' %}hidden--mob{% endif %}">
            {%- liquid
                assign has_childlinks = false

                if link.links != blank
                    assign parent_class = 'mega-menu__parent'
                    assign has_childlinks = true
                endif
            -%}
            <a href="{{ link.url }}" class="mega-menu__link {{ parent_class }}" title="{{ link.title | escape }}">{{ link.title }}
                {%- if has_childlinks -%}
                    <span class="mega-menu__icon">
                        <i class="icon-chevron-right"></i>
                    </span>
                {%- endif -%}
            </a> 
        </li>
        {%- endfor -%}
    </ul>
</nav>
{%- endif -%}
